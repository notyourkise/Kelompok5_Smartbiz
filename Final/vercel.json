{
  "version": 2,
  "builds": [
    { "src": "backend/api/index.js", "use": "@vercel/node" },
    {
      "src": "frontend-app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.js" },
    { "src": "/auth/(.*)", "dest": "backend/api/index.js" },
    { "src": "/keuangan/(.*)", "dest": "backend/api/index.js" },
    { "src": "/coffee-shop/(.*)", "dest": "backend/api/index.js" },
    { "src": "/uploads/(.*)", "dest": "backend/api/index.js" },
    { "handle": "filesystem" },
  { "src": "/(.*)", "dest": "/index.html" }
  ]
}
